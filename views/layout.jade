doctype html
html(lang="tr")
  head
    include ./head.jade
  body
    nav(class="navbar navbar-expand-lg bg-dark navbar-dark")
      a.navbar-brand(style="color:#fff",href="./") 
        h1(class="navbar-brand customh1") My World Europe
      |     
      button.navbar-toggler(type="button", data-toggle="collapse", data-target="#navbarSupportedContent", aria-controls="navbarSupportedContent", aria-expanded="false", aria-label="Toggle navigation")
        span.navbar-toggler-icon
      |   
      |     
      #navbarSupportedContent.collapse.navbar-collapse
        - var pages = ["Servisler", "İETT", "Çarşı","Yönetim","İletişim"]
        - var links = ["./servisler","./iett","./dukkanlar","./yonetim","./iletisim"]
        //-
          - var pages = ["Servisler", "İETT", "Çarşı","Yönetim","Teknik","Güvenlik","Sosyal","İletişim"]
          - var links = ["./servisler","./iett","./dukkanlar","./yonetim","./teknik","./guvenlik","./sosyal","./iletisim"]
        
        ul.navbar-nav.ml-auto

          -each page,index in pages
            li.nav-item
              if page == title
                a.nav-link.active(href='#')= page
                  span.sr-only (current)
              else
                a.nav-link(href=links[index])= page
                
    main(class="container",style="margin-top:30px")   
      div(class="modal",tabindex="-1",role="dialog")
        div(class="modal-dialog",role="document")
          div(class="modal-content")
            div(class="modal-header")
              h5(class="modal-title")
            div(class="modal-body")
              p(class="modalBody")
            div(class="modal-footer")
              button(type="button",class="btn btn-secondary",data-dismiss="modal")
      block content

    include ./footer.jade